{
  "name": "@dengfengwang/utils",
  "version": "0.0.20",
  "description": "Some commonly used utils.",
  "main": "lib/utils.umd.js",
  "module": "lib/utils.es.js",
  "browser": {
    "lib/utils.iife.js": "lib/utils.iife.js",
    "lib/utils.cjs.js": "lib/utils.cjs.js"
  },
  "files": [
    "lib/**/*",
    "typings/**/*.d.ts"
  ],
  "typings": "lib/index.d.ts",
  "sideEffects": false,
  "keywords": [
    "utils",
    "工具",
    "array",
    "boolean",
    "date",
    "math",
    "number",
    "string"
  ],
  "scripts": {
    "build": "npm run tslint && npm run test && rollup -c",
    "test": "jest",
    "dev": "rollup -c -w",
    "clean": "rimraf node_modules",
    "rm": "rimraf lib",
    "tslint": "tslint -p .",
    "publish:patch": "npm version patch && npm publish",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!shiva/)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfigFile": "tsconfig.test.json"
      },
      "google": {}
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.schema.ts",
      "!src/schema/*.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts",
      "<rootDir>/tests/**/?(*.)test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "^.+\\.js$": "babel-jest"
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.48.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-watch": "^4.3.1",
    "ts-jest": "^26.5.6",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wangweiwei/utils.git"
  },
  "bugs": {
    "url": "https://github.com/wangweiwei/utils/issues"
  },
  "homepage": "https://github.com/wangweiwei/utils#readme",
  "author": "wangweiwei",
  "license": "MIT"
}
